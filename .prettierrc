{
  "overrides": [
    {
      "files": ["*.js", "*.,ts"],
      "options": {
        "tabWidth": 4,
        "useTabs": true,
        "printWidth": 100,
        "trailingComma": "all",
        "singleQuote": true
      }
    },
    {
      "files": "*.sol",
      "options": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "always"
      }
    }
  ]
}
